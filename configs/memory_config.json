{
  "memory": {
    "short_term": {
      "enabled": true,
      "max_entries": 50,
      "max_tokens": 5000,
      "truncate_strategy": "head"
    },
    "episodic": {
      "enabled": true,
      "storage_path": "sessions/episodic_memory.json",
      "max_episodes": 1000
    },
    "semantic": {
      "enabled": true,
      "storage_path": "sessions/semantic_memory.json",
