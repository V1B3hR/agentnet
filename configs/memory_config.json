      "max_entries": 500
    }
  },
  "retrieval": {
    "max_total_tokens": 8000,
    "summarize_threshold": 6000,
    "short_term_count": 10,
    "semantic_count": 5,
    "semantic_threshold": 0.7,
    "episodic_count": 3
  }
}